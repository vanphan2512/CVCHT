               ErrorLog.Add(objIData, objResultMessage.Message, objResultMessage.MessageDetail, "DaWorksSupportProject -> Insert", Globals.ModuleName);
               return objResultMessage;
           }
           finally
           {
               objIData.Disconnect();
           }
           return objResultMessage;
       }

